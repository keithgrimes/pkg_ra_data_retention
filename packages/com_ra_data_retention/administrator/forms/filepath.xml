<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Ramblerswebs\Component\Ra_data_retention\Administrator\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" hidden="true" hint="COM_RA_DATA_RETENTION_FORM_LBL_RETENTION_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" description="JGLOBAL_FIELD_MODIFIED_BY_DESC" hidden="true" hint="COM_RA_DATA_RETENTION_FORM_LBL_RETENTION_MODIFIED_BY"/>
    <field name="filepath" type="text" default="" required="true" message="This is required" label="COM_RA_DATA_RETENTION_FIELD_FILEPATH_LABEL" description="COM_RA_DATA_RETENTION_FIELD_FILEPATH_DESC" hint="COM_RA_DATA_RETENTION_FIELD_FILEPATH_HINT"/>
    <field name="exclude" type="list" default="0" required="true" message="This is required" label="COM_RA_DATA_RETENTION_FIELD_EXCLUDE_LABEL" description="COM_RA_DATA_RETENTION_FIELD_EXCLUDE_DESC" hint="COM_RA_DATA_RETENTION_FIELD_EXCLUDE_HINT">
      <option value="0">NO</option>
      <option value="1">YES</option>
    </field>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
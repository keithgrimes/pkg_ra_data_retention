<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="COM_RA_DATA_RETENTION_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_RA_DATA_RETENTION_FILTER_STATE"
               description="COM_RA_DATA_RETENTION_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_RA_DATA_RETENTION_LIST_FULL_ORDERING"
               description="COM_RA_DATA_RETENTION_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="r.id ASC">COM_RA_DATA_RETENTION_ID_ASC</option>
            <option value="r.id DESC">COM_RA_DATA_RETENTION_ID_DESC</option>
            <option value="r.state ASC">COM_RA_DATA_RETENTION_STATE_ASC</option>
            <option value="r.state DESC">COM_RA_DATA_RETENTION_STATE_DESC</option>
            <option value="r.ordering ASC">COM_RA_DATA_RETENTION_ORDERING_ASC</option>
            <option value="r.ordering DESC">COM_RA_DATA_RETENTION_ORDERING_DESC</option>
            <option value="r.tablename ASC">COM_RA_DATA_RETENTION_TABLENAME_ASC</option>
            <option value="r.tablename DESC">COM_RA_DATA_RETENTION_TABLENAME_DESC</option>


        </field>

       <field name="limit"
               type="limitbox"
               label="COM_RA_DATA_RETENTION_LIST_LIMIT"
               description="COM_RA_DATA_RETENTION_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>